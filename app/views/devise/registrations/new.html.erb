<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
      <h1 class="text-center">ProAccount</h2>
      <h4 class="text-center">Sign up for a Pro account for $10/month and get access to the community and contact information!</h4>
    <% else %>
      <h1 class="text-center">Basic Account</h1>
      <h4 class="text-center">Sign up for a Basic account and get basic access to the community.</h4>
    <% end %>
  </div>  
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2 style="text-align: center">Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>